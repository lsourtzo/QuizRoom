<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lsourtzo.app.photoquiz.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/marginmedium"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/title"
                android:layout_weight="0.3"
                android:src="@drawable/title"
                android:layout_marginLeft="@dimen/marginmedium"
                android:layout_marginRight="@dimen/marginmedium"

                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/marginlarge"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/marginmedium"
                            android:layout_marginLeft="@dimen/marginsmall"
                            android:layout_marginRight="@dimen/marginsmall"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/Photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/marginsmall"
                                android:scaleType="fitXY"
                                android:src="@drawable/paint"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/frame" />

                        </RelativeLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="0.8"
                            android:scaleType="fitEnd"

                            android:src="@drawable/couch" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                            <ImageView
                                android:id="@+id/clock1"
                                style="@style/anime"
                                android:visibility="visible"
                                android:layout_margin="@dimen/marginsmall"
                                android:src="@drawable/cl12" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:gravity="bottom"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitEnd"
                                android:src="@drawable/lamp" />

                            <ImageView
                                android:id="@+id/radio"
                                style="@style/anime"
                                android:onClick="OnRadioButtonPressed"
                                android:src="@drawable/table_radio_trans"
                                android:visibility="gone" />


                            <ImageView
                                android:id="@+id/radio2"
                                style="@style/anime"
                                android:src="@drawable/table_radio"
                                android:visibility="visible" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/marginmedium"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginframe"
                android:background="@color/questionbackcolor">

                <ScrollView
                    android:id="@+id/RadioGroupLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/RadioGroupQuestion"
                            style="@style/textbox" />

                        <RadioGroup
                            android:id="@+id/QuestionRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radiobutton_1"
                                style="@style/checkradiobox" />

                            <RadioButton
                                android:id="@+id/radiobutton_2"
                                style="@style/checkradiobox" />

                            <RadioButton
                                android:id="@+id/radiobutton_3"
                                style="@style/checkradiobox" />

                            <RadioButton
                                android:id="@+id/radiobutton_4"
                                style="@style/checkradiobox"
                                android:layout_marginBottom="@dimen/marginlarge" />

                        </RadioGroup>

                    </LinearLayout>


                </ScrollView>

                <ScrollView
                    android:id="@+id/CheckBoxLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/CheckBoxQuestion"
                            style="@style/textbox" />

                        <CheckBox
                            android:id="@+id/checkbox_1"
                            style="@style/checkradiobox" />

                        <CheckBox
                            android:id="@+id/checkbox_2"
                            style="@style/checkradiobox" />

                        <CheckBox
                            android:id="@+id/checkbox_3"
                            style="@style/checkradiobox" />

                        <CheckBox
                            android:id="@+id/checkbox_4"
                            style="@style/checkradiobox"
                            android:layout_marginBottom="@dimen/marginlarge" />

                    </LinearLayout>


                </ScrollView>

                <ScrollView
                    android:id="@+id/EditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/EditTextQuestion"
                            style="@style/textbox"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />


                        <EditText
                            android:id="@+id/EditBox"
                            style="@style/edittextbox"
                            android:layout_marginBottom="@dimen/marginlarge"
                            android:hint="@string/AnswearHere"
                            android:textAllCaps="true" />

                    </LinearLayout>


                </ScrollView>

                <ScrollView
                    android:id="@+id/StartupLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/marginmedium"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textbox3"
                            android:text="@string/WelcomeText" />

                        <LinearLayout
                            android:onClick="LoginScreenShowUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/marginsmall"
                            android:layout_marginTop="@dimen/marginmedium"
                            android:layout_marginLeft="@dimen/marginvlarge"
                            android:layout_marginRight="@dimen/marginvlarge"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@color/loginscreenbuttoncolor">

                            <ImageView
                                android:layout_width="@dimen/iconsize2"
                                android:layout_height="@dimen/iconsize2"
                                android:paddingRight="@dimen/marginmedium"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/allicon"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/linecolor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/marginmedium"
                                android:textColor="@color/QuestionColor"
                                android:layout_gravity="center_vertical"
                                android:text="@string/loginScreenButtonText" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:id="@+id/FinalResultLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/marginlarge"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/FinalResaltText"
                            android:gravity="center_horizontal"
                            style="@style/textbox2"
                            android:text="@string/ScoreTableTitle"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">


                            <WebView
                                android:id="@+id/FinalResaltNames"
                                android:gravity="left"
                                style="@style/scoretabletextbox"/>

                            <WebView
                                android:id="@+id/FinalResaltScore"
                                android:gravity="right"
                                style="@style/scoretabletextbox"/>

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/FBFinalResaltText"
                            style="@style/textbox2"
                            android:gravity="center_horizontal"
                            android:text="@string/ScoreTableTitle2" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">


                            <WebView
                                android:id="@+id/FBFinalResaltNames"
                                style="@style/scoretabletextbox"
                                android:gravity="left" />

                            <WebView
                                android:id="@+id/FBFinalResaltScore"
                                style="@style/scoretabletextbox"
                                android:gravity="right" />

                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:id="@+id/StageLayers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <WebView
                            android:id="@+id/StageLayersText"
                            android:gravity="center_horizontal|center_vertical"
                            style="@style/textbox"
                            />

                    </LinearLayout>
                </ScrollView>


                <ImageView
                    android:id="@+id/okbuttonimage"
                    style="@style/OKButton"
                    android:onClick="OKButtonMethod"
                    android:src="@drawable/okbutton" />

                <ImageView
                    android:id="@+id/correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/marginlarge"
                    android:layout_marginRight="@dimen/marginlarge"
                    android:src="@drawable/correct"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/marginlarge"
                    android:layout_marginRight="@dimen/marginlarge"
                    android:src="@drawable/wrong"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/crack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/crack"
                        android:onClick="gameOverHide"
                        android:visibility="gone"/>


                    <ImageView
                        android:id="@+id/gameover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gameover"
                        android:onClick="gameOverHide"
                        android:padding="@dimen/gameoverpad"
                        android:visibility="gone"/>
                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fireworkimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="congratsHide"
                            android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/congratsulation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/congratulation"
                        android:padding="@dimen/marginlarge"
                        android:onClick="congratsHide"
                        android:visibility="gone"/>



                </RelativeLayout>

                <ScrollView
                    android:id="@+id/LoginScreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/questionbackcolor2"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|top"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textbox3"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:text="@string/LoginWelcome" />

                            <requestFocus />



                            <TextView
                                style="@style/textbox4"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:paddingTop="@dimen/marginsmall"
                                android:text="@string/LoginText" />

                            <TextView
                                android:id="@+id/textView"
                                style="@style/textbox4"
                                android:background="@color/loginmethodscolor"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:paddingLeft="@dimen/marginsmall"
                                android:layout_marginTop="@dimen/marginmedium"
                                android:layout_marginBottom="@dimen/marginmedium"
                                android:paddingBottom="@dimen/marginsmall"
                                android:paddingTop="@dimen/marginsmall"
                                android:text="@string/emailLoginText" />

                            <requestFocus />

                            <TextView
                                style="@style/textbox4"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:text="@string/email1" />

                            <requestFocus />

                            <EditText
                                android:id="@+id/EmailEditBox"
                                style="@style/edittextbox"
                                android:hint="@string/email2"
                                android:maxLength="20"
                                android:textAllCaps="true" />

                            <TextView
                                style="@style/textbox4"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:text="@string/password1" />

                            <requestFocus />

                            <EditText
                                android:id="@+id/PasswordEditBox"
                                style="@style/edittextbox"
                                android:hint="@string/password2"
                                android:maxLength="20"
                                android:password="true"
                                android:textAllCaps="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/marginmedium"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/marginsmall"
                                    android:paddingRight="@dimen/marginsmall"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:onClick="emailRegisterMethod"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/marginsmall"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:background="@color/registerbuttoncolor">

                                        <ImageView
                                            android:layout_width="@dimen/iconsize"
                                            android:layout_height="@dimen/iconsize"
                                            android:paddingRight="@dimen/marginsmall"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/registericon"/>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/linecolor" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="@dimen/marginsmall"
                                            android:textColor="@color/QuestionColor"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/Register1" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="right"
                                        android:paddingTop="@dimen/marginsmall">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="right"
                                            android:textSize="@dimen/smalltsize"
                                            android:paddingLeft="@dimen/marginsmall"
                                            android:textColor="@color/QuestionColor"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/Register2" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/marginsmall"
                                    android:paddingRight="@dimen/marginsmall"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:onClick="emailLoginMethod"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/marginsmall"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:background="@color/loginbuttoncolor">

                                        <ImageView
                                            android:layout_width="@dimen/iconsize"
                                            android:layout_height="@dimen/iconsize"
                                            android:paddingRight="@dimen/marginsmall"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/loginicon"/>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/linecolor" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="@dimen/marginsmall"
                                            android:textColor="@color/QuestionColor"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/Login1" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="right"
                                        android:paddingTop="@dimen/marginsmall">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="right"
                                            android:textSize="@dimen/smalltsize"
                                            android:paddingLeft="@dimen/marginmedium"
                                            android:textColor="@color/QuestionColor"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/Login2" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textSize="@dimen/smalltsize"
                                android:paddingLeft="@dimen/margintextlogin"
                                android:paddingRight="@dimen/margintextlogin"
                                android:textColor="@color/QuestionColor"
                                android:layout_gravity="center_vertical"
                                android:text="@string/Login2b" />

                            <TextView
                                style="@style/textbox4"
                                android:layout_marginTop="@dimen/marginmedium"
                                android:layout_marginBottom="@dimen/marginmedium"
                                android:paddingLeft="@dimen/marginsmall"
                                android:paddingTop="@dimen/marginsmall"
                                android:paddingBottom="@dimen/marginsmall"
                                android:background="@color/loginmethodscolor"
                                android:text="@string/googleLoginText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margingoogle"
                                android:paddingRight="@dimen/margingoogle"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:onClick="googleLoginMethod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/marginmedium"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:background="@color/googlebuttoncolor">

                                    <ImageView
                                        android:layout_width="@dimen/iconsize"
                                        android:layout_height="@dimen/iconsize"
                                        android:paddingRight="@dimen/marginmedium"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/googleloginicon"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="fill_parent"
                                        android:background="@color/linecolor" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/marginmedium"
                                        android:textColor="@color/questionbackcolor"
                                        android:layout_gravity="center_vertical"

                                        android:text="@string/google1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="right"
                                    android:paddingTop="@dimen/marginsmall">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:textSize="@dimen/smalltsize"
                                        android:paddingLeft="@dimen/marginmedium"
                                        android:textColor="@color/QuestionColor"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/google2" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                style="@style/textbox4"
                                android:layout_marginTop="@dimen/marginmedium"
                                android:layout_marginBottom="@dimen/marginmedium"
                                android:paddingLeft="@dimen/marginsmall"
                                android:paddingTop="@dimen/marginsmall"
                                android:paddingBottom="@dimen/marginsmall"
                                android:background="@color/loginmethodscolor"
                                android:text="@string/noLoginText" />

                            <TextView
                                style="@style/textbox3"
                                android:text="@string/NameTitle" />

                            <EditText
                                android:id="@+id/NameText"
                                style="@style/edittextbox"
                                android:hint="@string/NameText"
                                android:maxLength="20"
                                android:textAllCaps="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margingoogle"
                                android:paddingRight="@dimen/margingoogle"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:onClick="noLoginMethod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/marginmedium"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:background="@color/localbuttoncolor">

                                    <ImageView
                                        android:layout_width="@dimen/iconsize"
                                        android:layout_height="@dimen/iconsize"
                                        android:paddingRight="@dimen/marginmedium"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/mobile"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="fill_parent"
                                        android:background="@color/linecolor" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/marginmedium"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/QuestionColor"
                                        android:text="@string/nologin1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="right"
                                    android:paddingTop="@dimen/marginsmall">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:textSize="@dimen/smalltsize"
                                        android:paddingLeft="@dimen/marginmedium"
                                        android:textColor="@color/QuestionColor"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/nologin2" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>
                </ScrollView>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
